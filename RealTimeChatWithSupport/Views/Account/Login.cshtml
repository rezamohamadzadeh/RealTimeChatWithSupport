@model RealTimeChatWithSupport.Dtos.LoginDto
@{
    ViewData["Title"] = "Sign in to chat with support";
    Layout = null;
}


<!doctype html>
<html lang="en">


<!-- Mirrored from themesbrand.com/chatvia/layouts/auth-login.html by HTTrack Website Copier/3.x [XR&CO'2014], Fri, 11 Sep 2020 05:21:35 GMT -->
<head>

    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Responsive Bootstrap 4 Chat App" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap-dark.min.css" id="bootstrap-dark-style" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/assets/css/app-dark.min.css" id="app-dark-style" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />

</head>

<body>

    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="text-center mb-4">
                        <h4>Sign in</h4>
                        <p class="text-muted mb-4">@ViewData["Title"].</p>
                    </div>

                    <div class="card">
                        <div class="card-body p-4">
                            <div class="p-3">
                                <form asp-action="Login" asp-controller="Account" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="UserName"></label>
                                        <div class="input-group mb-3 bg-soft-light input-group-lg rounded-lg">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text border-light text-muted">
                                                    <i class="ri-user-2-line"></i>
                                                </span>
                                            </div>
                                            <input asp-for="UserName" class="form-control bg-soft-light border-light" placeholder="Enter username">
                                        </div>
                                    </div>

                                    <div class="form-group mb-4">

                                        <label asp-for="Password"></label>
                                        <div class="input-group mb-3 bg-soft-light input-group-lg rounded-lg">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text border-light text-muted">
                                                    <i class="ri-lock-2-line"></i>
                                                </span>
                                            </div>
                                            <input asp-for="Password" class="form-control bg-soft-light border-light" placeholder="Enter password">
                                        </div>
                                    </div>

                                    <div class="custom-control custom-checkbox mb-4">
                                        <input asp-for="RememberMe" class="custom-control-input" id="remember-check">
                                        <label class="custom-control-label" for="remember-check">Remember me</label>
                                    </div>

                                    <div>
                                        <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Sign in</button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>



    <!-- JAVASCRIPT -->
    <script src="~/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/node-waves/waves.min.js"></script>

    <script src="~/assets/js/app.js"></script>

    <partial name="_ValidationScriptsPartial" />


</body>

<!-- Mirrored from themesbrand.com/chatvia/layouts/auth-login.html by HTTrack Website Copier/3.x [XR&CO'2014], Fri, 11 Sep 2020 05:21:35 GMT -->
</html>
